{
  "name": "api",
  "version": "1.0.0",
  "description": "pharmaweave",
  "main": "index.ts",
  "scripts": {
    "swagger:gen": "ts-node src/swagger.ts",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "start:watch": "nodemon --watch 'dist' --watch 'src/swagger.json' --exec 'node dist/index.js'",
    "build": "babel src --out-dir dist --extensions \".ts,.js\" --copy-files",
    "build:watch": "babel src --out-dir dist --extensions \".ts,.js\" --copy-files --watch",
    "dev:watch": "concurrently \"npm:swagger:gen\" \"npm:build:watch\" \"npm:start:watch\"",
    "test:docker": "vitest run --run --passWithNoTests --config vitest.config.ts",
    "dev": "docker compose -f docker/docker-compose.yml up",
    "stop": "docker compose -f docker/docker-compose.yml down",
    "stop:vls": "docker compose -f docker/docker-compose.yml down -v",
    "migration:generate": "export $(cat ./.env | xargs) && tsx ./node_modules/typeorm/cli.js migration:generate -d ./src/database/data-source.ts"
  },
  "author": "mateusvrs",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.62.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.20.6",
    "typeorm": "^0.3.27",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-istanbul": "^4.0.5",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.5"
  }
}
