{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "src/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}